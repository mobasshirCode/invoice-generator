{
  "version": 2,
  "builds": [
    { "src": "backend/server.ts", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.ts" },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/index.html"
    }
  ]
}
